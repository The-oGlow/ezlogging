{
  "name": "ollily/ezlogging",
  "description": "Simplify the usage of - Logging with Monolog - Testing with PHPUnit - Reflection with PHP - Developer shortkeys for composer",
  "type": "library",
  "keywords": [
    "php",
    "logger",
    "logging",
    "monolog",
    "phpunit",
    "testcase",
    "test-case",
    "reflection"
  ],
  "homepage": "https://github.com/ollily/ezlogging",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "ollily",
      "email": "426229+ollily@users.noreply.github.com",
      "homepage": "https://github.com/ollily"
    }
  ],
  "support": {
    "issues": "https://github.com/ollily/ezlogging/issues"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=7.4",
    "psr/log": "^1.0||^2.0||^3.0",
    "monolog/monolog": "^2.10"
  },
  "provide": {
    "psr/log-implementation": "^1.0||^2.0||^3.0"
  },
  "suggest": {
    "bamarni/composer-bin-plugin": "Having compatible versions"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-strict-rules": "^2.0",
    "vimeo/psalm": "^5.26",
    "psalm/plugin-phpunit": "^0.19",
    "friendsofphp/php-cs-fixer": "^3.0",
    "squizlabs/php_codesniffer": "^3.13",
    "rogervila/php-sonarqube-scanner": "^1.0"
  },
  "config": {
    "platform": {
      "php": "7.4.0"
    },
    "optimize-autoloader": false,
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "php-http/discovery": true,
      "bamarni/composer-bin-plugin": true
    }
  },
  "autoload": {
    "psr-4": {
      "ollily\\Tools\\": "src/Tools",
      "Monolog\\": "src/Monolog",
      "PHPUnit\\": "src/PHPUnit"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ollily\\Tools\\": "tests/Tools",
      "Monolog\\": "tests/Monolog",
      "PHPUnit\\": "tests/PHPUnit"
    }
  },
  "scripts": {
    "c-all": [
      "composer c-fix",
      "composer c-phpstan",
      "composer c-psalm",
      "composer c-phpcs",
      "composer c-test"
    ],
    "c-da": "@composer dump-autoload",
    "c-dryfix": "@php -d xdebug.mode=off vendor/bin/php-cs-fixer check --allow-unsupported-php-version=yes --allow-risky=yes --format txt",
    "c-fix": "@php -d xdebug.mode=off vendor/bin/php-cs-fixer fix --allow-unsupported-php-version=yes --allow-risky=yes",
    "c-package": "@composer archive --format=zip --dir=target/staging",
    "c-phpcs": "@php -d xdebug.mode=off vendor/bin/phpcs",
    "c-phpstan": "@php -d xdebug.mode=off vendor/bin/phpstan analyse",
    "c-psalm": "@php -d xdebug.mode=off vendor/bin/psalm",
    "c-test": "@php -d xdebug.mode=coverage vendor/bin/phpunit"
  },
  "scripts-descriptions": {
    "c-all": "CUSTOM: Run composer with c-fix, c-phpstan, c-psalm, c-phpcs, c-test",
    "c-da": "CUSTOM: Alias for dump-autoload",
    "c-dryfix": "CUSTOM: Check code with PHP-CS-FIXER",
    "c-fix": "CUSTOM: Fix code with PHP-CS-FIXER",
    "c-package": "CUSTOM: Create deployable package",
    "c-phpcs": "CUSTOM: Check code with PHP Code Sniffer",
    "c-phpstan": "CUSTOM: Check code with PHPStan",
    "c-psalm": "CUSTOM: Check code wtih Psalm",
    "c-test": "CUSTOM: Execute all or one unit tests with PHPUnit"
  }
}